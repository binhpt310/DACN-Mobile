<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hong"
    android:orientation="vertical"
    tools:context=".search_question">

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/searchview_backgound"
        android:backgroundTint="@color/timxanh"
        android:iconifiedByDefault="false"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Nhập từ khóa"
        android:searchIcon="@null">

        <ImageButton
            android:id="@+id/search_bt"
            android:layout_width="46dp"
            android:layout_height="match_parent"

            android:background="@color/timxanh"
            android:contentDescription="@string/todo"
            android:src="@drawable/hinh_tron"
            android:visibility="invisible"
            tools:src="@drawable/ic_baseline_search" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </SearchView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

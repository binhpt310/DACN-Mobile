<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/trang"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="#FFFFFF">

            <View
                android:id="@+id/view3"
                android:layout_width="104dp"
                android:layout_height="61dp"

                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="#A0ABB1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_ten_de_thi" />

            <EditText
                android:id="@+id/edittxt_so_cau_sai2"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@null"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="10"
                android:textAlignment="center"
                android:textColor="#731711"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/view3"
                app:layout_constraintEnd_toEndOf="@+id/view3"
                app:layout_constraintStart_toStartOf="@+id/view3"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editTextTextPersonName6"
                android:layout_width="62dp"
                android:layout_height="40dp"
                android:background="@null"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Còn lại"
                android:textAlignment="center"
                android:textColor="#020202"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/view3"
                app:layout_constraintStart_toStartOf="@+id/view3"
                app:layout_constraintTop_toTopOf="@+id/view3"
                tools:ignore="TouchTargetSizeCheck" />

            <View
                android:id="@+id/view1"
                android:layout_width="104dp"
                android:layout_height="61dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"

                android:layout_marginBottom="15dp"
                android:background="#7DE473"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_ten_de_thi"
                app:layout_constraintVertical_bias="0.636" />

            <EditText
                android:id="@+id/edittxt_so_cau_dung"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@null"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="10"
                android:textAlignment="center"
                android:textColor="#0A7306"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/view1"
                app:layout_constraintEnd_toEndOf="@+id/view1"
                app:layout_constraintHorizontal_bias="0.486"
                app:layout_constraintStart_toStartOf="@+id/view1" />

            <TextView
                android:id="@+id/txt_view_ten_de_thi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/roboto_bold"
                android:singleLine="false"
                android:text="Đề thi tham khảo GDCD năm 2019 tr abcxyz"
                android:textColor="#080808"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progressBar" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="365dp"
                android:layout_height="16dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:progressTint="#3F51B5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_ten_mon_hoc" />

            <TextView
                android:id="@+id/txt_view_phan_tram_hoan_thanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="99%"
                android:textColor="#3F51B5"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_view_ten_mon_hoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Môn địa lý 12"
                android:textColor="#3A3A3A"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view2"
                android:layout_width="104dp"
                android:layout_height="61dp"
                android:layout_marginTop="15dp"

                android:layout_marginBottom="15dp"
                android:background="@color/maudo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/view3"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_ten_de_thi"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/edittxt_so_cau_sai"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@null"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="10"
                android:textAlignment="center"
                android:textColor="#731711"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintStart_toStartOf="@+id/view2" />

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="62dp"
                android:layout_height="40dp"
                android:background="@null"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Sai"
                android:textAlignment="center"
                android:textColor="#731711"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintStart_toStartOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/view2" />

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="62dp"
                android:layout_height="40dp"
                android:background="@null"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Đúng"
                android:textAlignment="center"
                android:textColor="#0A7306"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/view1"
                app:layout_constraintStart_toStartOf="@+id/view1"
                app:layout_constraintTop_toTopOf="@+id/view1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
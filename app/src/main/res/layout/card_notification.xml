<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/title_cardnoti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bao thuc"
            android:textSize="18sp"
            android:textColor="@color/den"
            android:fontFamily="@font/roboto_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time1_cardnoti"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="25sp"
                    android:textColor="@color/den"
                    android:fontFamily="@font/roboto_medium"/>

                <TextView
                    android:id="@+id/time2_cardnoti"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="20sp"
                    android:textColor="@color/den"
                    android:fontFamily="@font/roboto_regular"/>

                <TextView
                    android:id="@+id/time3_cardnoti"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="20sp"
                    android:textColor="@color/den"
                    android:fontFamily="@font/roboto_regular"/>

            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_cardnoti"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cardnoti_cn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/roboto_regular"
                android:text="CN"
                android:textColor="@color/den"
                android:textSize="16sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/cardnoti_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_margin="3dp"
                android:text="2"
                android:textColor="@color/den"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/cardnoti_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_margin="3dp"
                android:text="3"
                android:textColor="@color/den"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/cardnoti_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_margin="3dp"
                android:text="4"
                android:textColor="@color/den"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/cardnoti_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_margin="3dp"
                android:text="5"
                android:textColor="@color/den"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/cardnoti_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_margin="3dp"
                android:text="6"
                android:textColor="@color/den"
                android:textSize="16sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/cardnoti_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_margin="3dp"
                android:text="7"
                android:textColor="@color/den"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
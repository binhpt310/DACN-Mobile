<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/timmongmo"
        android:padding="15dp">

        <TextView
            android:id="@+id/question_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="9dp"
            android:text="Đáp án:"
            android:textColor="@color/den"

            android:textSize="18sp" />

        <TextView
            android:id="@+id/ans_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Câu hỏi:"
            android:textColor="@color/den"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="right"
            >

            <TextView
                android:id="@+id/listcode_search_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Đề ôn"
                android:textColor="@color/timxanh"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/listcode_search_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="/"
                android:textColor="@color/timxanh"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/listcode_search_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Đề thi"
                android:textColor="@color/timxanh"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
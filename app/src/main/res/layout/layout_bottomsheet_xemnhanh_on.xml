<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/timhong"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_on_xemnhanh_dung"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_xemnhanh_xanh"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="1"
                android:textSize="20sp"
                android:textColor="@color/den"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Đúng"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/den"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">

            <TextView
                android:id="@+id/txt_on_xemnhanh_sai"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_xemnhanh_do"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="1"
                android:textSize="20sp"
                android:textColor="@color/den"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Sai"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/den"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">

            <TextView
                android:id="@+id/txt_on_xemnhanh_chualam"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_xemnhanh_tim"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="1"
                android:textSize="20sp"
                android:textColor="@color/den"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Chưa làm"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/den"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhấn vào câu bất kỳ để xem"
        android:textColor="@color/den80"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_xemnhanh_tim"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Câu 01"
            android:textSize="20sp"
            android:textColor="@color/den"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_xemnhanh_tim"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Câu 01"
            android:textSize="20sp"
            android:textColor="@color/den"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_xemnhanh_tim"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Câu 01"
            android:textSize="20sp"
            android:textColor="@color/den"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_xemnhanh_tim"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Câu 01"
            android:textSize="20sp"
            android:textColor="@color/den"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

</LinearLayout>